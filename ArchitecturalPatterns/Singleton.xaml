<Window x:Class="ArchitecturalPatterns.Singleton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchitecturalPatterns"
        mc:Ignorable="d"
        Title="Singleton" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Выберите разрешение экрана: "/>
            <ComboBox x:Name="listResolution"/>
            <Button Content="Выбрать разрешение экрана для игры" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
